generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Artist {
  id                String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name              String
  avatar            Json?
  mainCover         String?  @map("main_cover")
  description       String?
  listeners         Int      @default(0)
  isVerified        Boolean  @default(false) @map("is_verified")
  regionalListeners Json?    @map("regional_listeners")
  socials           Json?
  covers            String[] @default([])
  followersDefault  Int      @default(0) @map("followers_default")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")
  followers         Follow[]
  albums            Album[]  @relation("AlbumToArtist")
  genres            Genre[]  @relation("ArtistToGenre")
  tracks            Track[]  @relation("ArtistToTrack")

  @@index([name])
  @@map("artist")
}

model Album {
  id          String              @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name        String
  cover       Json?
  releaseDate DateTime            @default(now()) @map("release_date") @db.Date
  createdAt   DateTime            @default(now()) @map("created_at") @db.Date
  updatedAt   DateTime            @updatedAt @map("updated_at")
  collections AlbumOnCollection[]
  tracks      TrackOnAlbum[]
  artists     Artist[]            @relation("AlbumToArtist")
  genres      Genre[]             @relation("AlbumToGenre")

  @@index([name])
  @@map("album")
}

model Track {
  id            String              @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name          String
  cover         Json?
  song          String?
  releaseDate   DateTime            @default(now()) @map("release_date") @db.Date
  duration      Int
  lyrics        String?
  reproductions Int                 @default(0)
  createdAt     DateTime            @default(now()) @map("created_at") @db.Date
  updatedAt     DateTime            @updatedAt @map("updated_at")
  history       History[]
  likes         Like[]
  albums        TrackOnAlbum[]
  collections   TrackOnCollection[]
  playlists     TrackOnPlaylist[]
  artists       Artist[]            @relation("ArtistToTrack")
  genres        Genre[]             @relation("GenreToTrack")

  @@index([name])
  @@map("track")
}

model Genre {
  id      String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name    String   @unique
  addedAt DateTime @default(now()) @map("added_at") @db.Date
  albums  Album[]  @relation("AlbumToGenre")
  artists Artist[] @relation("ArtistToGenre")
  tracks  Track[]  @relation("GenreToTrack")

  @@map("genre")
}

model TrackOnAlbum {
  order   Int    @default(1)
  disk    Int    @default(1)
  albumId String @map("album_id") @db.Uuid
  trackId String @map("track_id") @db.Uuid
  album   Album  @relation(fields: [albumId], references: [id], onDelete: Cascade)
  track   Track  @relation(fields: [trackId], references: [id], onDelete: Cascade)

  @@id([albumId, trackId])
  @@map("track_on_album")
}

model TrackOnPlaylist {
  trackId    String   @map("track_id") @db.Uuid
  playlistId String   @map("playlist_id") @db.Uuid
  addedAt    DateTime @default(now()) @map("added_at") @db.Date
  playlist   Playlist @relation(fields: [playlistId], references: [id], onDelete: Cascade)
  track      Track    @relation(fields: [trackId], references: [id], onDelete: Cascade)

  @@id([trackId, playlistId])
  @@index([playlistId, addedAt])
  @@map("track_on_playlist")
}

model AlbumOnCollection {
  albumId      String     @map("album_id") @db.Uuid
  collectionId String     @map("collection_id") @db.Uuid
  addedAt      DateTime   @default(now()) @map("added_at") @db.Date
  album        Album      @relation(fields: [albumId], references: [id], onDelete: Cascade)
  collection   Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)

  @@id([albumId, collectionId])
  @@map("album_on_collection")
}

model TrackOnCollection {
  trackId      String     @map("track_id") @db.Uuid
  collectionId String     @map("collection_id") @db.Uuid
  addedAt      DateTime   @default(now()) @map("added_at") @db.Date
  collection   Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  track        Track      @relation(fields: [trackId], references: [id], onDelete: Cascade)

  @@id([trackId, collectionId])
  @@map("track_on_collection")
}

model PlaylistOnCollection {
  playlistId   String     @map("playlist_id") @db.Uuid
  collectionId String     @map("collection_id") @db.Uuid
  addedAt      DateTime   @default(now()) @map("added_at") @db.Date
  collection   Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  playlist     Playlist   @relation(fields: [playlistId], references: [id], onDelete: Cascade)

  @@id([playlistId, collectionId])
  @@map("playlist_on_collection")
}

model Collection {
  id        String                 @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId    String                 @unique @map("user_id") @db.Uuid
  albums    AlbumOnCollection[]
  user      User                   @relation(fields: [userId], references: [id], onDelete: Cascade)
  playlists PlaylistOnCollection[]
  tracks    TrackOnCollection[]

  @@map("collection")
}

model Follow {
  userId     String   @map("user_id") @db.Uuid
  artistId   String   @map("artist_id") @db.Uuid
  followedAt DateTime @default(now()) @map("followed_at") @db.Date
  artist     Artist   @relation(fields: [artistId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, artistId])
  @@map("follow")
}

model Like {
  userId  String   @map("user_id") @db.Uuid
  trackId String   @map("track_id") @db.Uuid
  likedAt DateTime @default(now()) @map("liked_at") @db.Date
  track   Track    @relation(fields: [trackId], references: [id], onDelete: Cascade)
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, trackId])
  @@index([userId, likedAt])
  @@map("like")
}

model Playlist {
  id          String                 @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name        String
  cover       Json?
  userId      String                 @map("user_id") @db.Uuid
  createdAt   DateTime               @default(now()) @map("created_at") @db.Date
  updatedAt   DateTime               @updatedAt @map("updated_at")
  user        User                   @relation(fields: [userId], references: [id], onDelete: Cascade)
  collections PlaylistOnCollection[]
  tracks      TrackOnPlaylist[]

  @@map("playlist")
}

model UserFollow {
  followerId  String   @map("follower_id") @db.Uuid
  followingId String   @map("following_id") @db.Uuid
  createdAt   DateTime @default(now()) @map("created_at")
  follower    User     @relation("userFollowing", fields: [followerId], references: [id])
  following   User     @relation("followedBy", fields: [followingId], references: [id])

  @@id([followerId, followingId])
  @@map("user_follow")
}

model History {
  id       String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId   String   @map("user_id") @db.Uuid
  trackId  String   @map("track_id") @db.Uuid
  playedAt DateTime @default(now()) @map("played_at") @db.Timestamp(6)
  track    Track    @relation(fields: [trackId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, playedAt])
  @@map("history")
}

model User {
  id              String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name            String
  email           String       @unique
  emailVerified   Boolean?
  avatar          String?
  username        String       @unique
  displayUsername String
  biography       String?
  location        String?
  createdAt       DateTime     @default(now()) @map("created_at")
  updatedAt       DateTime     @updatedAt @map("updated_at")
  accounts        Account[]
  collection      Collection?
  following       Follow[]
  history         History[]
  likes           Like[]
  playlists       Playlist[]
  sessions        Session[]
  userFollowing   UserFollow[] @relation("userFollowing")
  followedBy      UserFollow[] @relation("followedBy")

  @@map("user")
}

model Session {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  expiresAt DateTime @map("expires_at")
  token     String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  ipAddress String?  @map("ip_address")
  userAgent String?  @map("user_agent")
  userId    String   @map("user_id") @db.Uuid
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Account {
  id                    String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  accountId             String    @map("account_id")
  providerId            String    @map("provider_id")
  userId                String    @map("user_id") @db.Uuid
  accessToken           String?   @map("access_token")
  refreshToken          String?   @map("refresh_token")
  idToken               String?   @map("id_token")
  accessTokenExpiresAt  DateTime? @map("access_token_expires_at")
  refreshTokenExpiresAt DateTime? @map("refresh_token_expires_at")
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now()) @map("created_at")
  updatedAt             DateTime  @updatedAt @map("updated_at")
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account")
}

model Verification {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  identifier String
  value      String
  expiresAt  DateTime @map("expires_at")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@map("verification")
}

model Admin {
  id       String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email    String @unique
  password String
}
