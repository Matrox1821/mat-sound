generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Artist {
  id                 String   @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  name               String
  avatar             Json
  main_cover         String
  description        String
  listeners          Int
  is_verified        Boolean
  regional_listeners Json
  socials            Json 
  covers             String[] @default([])

  followers_default  Int
  
  created_at         DateTime @default(dbgenerated("now()")) 
  updated_at         DateTime @updatedAt

  albums Album[]

  tracks Track[]

  followers Follow[]

  genres Genre[]

  @@index([name])
}


model Album {
  id           String   @id  @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  name         String
  cover        Json
  release_date DateTime @db.Date @default(dbgenerated("now()"))

  artists   Artist[]

  genres Genre[]

  tracks TracksOnAlbums[]

  collections AlbumOnCollection[]

  created_at DateTime @db.Date @default(dbgenerated("now()"))
  updated_at DateTime @updatedAt

  @@index([name])
}

model Track {
  id            String @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  name          String
  cover         Json
  song          String
  release_date  DateTime @db.Date @default(dbgenerated("now()"))
  duration      Int
  lyrics         String?

  reproductions Int

  genres Genre[]

  likes Like[]

  artists Artist[]

  albums TracksOnAlbums[]

  playlists TrackOnPlaylist[]

  collections TrackOnCollection[]

  history History[]

  created_at DateTime @db.Date @default(dbgenerated("now()"))
  updated_at DateTime @updatedAt
  
  @@index([name])
}

model Genre {
  id   String @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  artists Artist[]
  albums Album[]
  tracks Track[]
  name String
  added_at DateTime @db.Date @default(dbgenerated("now()"))
}

model TracksOnAlbums {
  order Int @default(1) @db.Integer
  disk Int  @default(1) @db.Integer

  album    Album  @relation(fields: [album_id], references: [id], onDelete: Cascade)
  album_id String @db.Uuid

  track    Track  @relation(fields: [track_id], references: [id], onDelete: Cascade)
  track_id String @db.Uuid

  @@id([album_id, track_id])
}


model TrackOnPlaylist {
  track    Track  @relation(fields: [track_id], references: [id], onDelete: Cascade)
  track_id String @db.Uuid

  playlist    Playlist @relation(fields: [playlist_id], references: [id], onDelete: Cascade)
  playlist_id String @db.Uuid

  added_at DateTime @db.Date @default(dbgenerated("now()"))

  @@id([track_id, playlist_id])
  @@index([playlist_id, added_at])
}


//content User

model AlbumOnCollection{
  album    Album  @relation(fields: [album_id], references: [id], onDelete: Cascade)
  album_id String @db.Uuid

  collection    Collection @relation(fields: [collection_id], references: [id], onDelete: Cascade)
  collection_id String @db.Uuid

  added_at DateTime @db.Date @default(dbgenerated("now()"))

  @@id([album_id, collection_id])
}

model TrackOnCollection{
  track    Track  @relation(fields: [track_id], references: [id], onDelete: Cascade)
  track_id String @db.Uuid

  collection    Collection @relation(fields: [collection_id], references: [id], onDelete: Cascade)
  collection_id String @db.Uuid

  added_at DateTime @db.Date @default(dbgenerated("now()"))

  @@id([track_id, collection_id])
}

model PlaylistOnCollection{
  playlist    Playlist  @relation(fields: [playlist_id], references: [id], onDelete: Cascade)
  playlist_id String @db.Uuid

  collection    Collection @relation(fields: [collection_id], references: [id], onDelete: Cascade)
  collection_id String @db.Uuid

  added_at DateTime @db.Date @default(dbgenerated("now()"))

  @@id([playlist_id, collection_id])
}


model Collection{
  id   String @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))

  albums AlbumOnCollection[]

  tracks TrackOnCollection[]

  playlists PlaylistOnCollection[]

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String   @unique @db.Uuid @map("user_id")

}



model Follow {
  user    User   @relation(fields: [user_id], references: [id], onDelete: Cascade)
  user_id String @db.Uuid

  artist    Artist @relation(fields: [artist_id], references: [id], onDelete: Cascade)
  artist_id String @db.Uuid

  followed_at DateTime @db.Date @default(dbgenerated("now()"))


  @@id([user_id, artist_id])
}

model Like {
  user    User   @relation(fields: [user_id], references: [id], onDelete: Cascade)
  user_id String @db.Uuid

  track    Track  @relation(fields: [track_id], references: [id], onDelete: Cascade)
  track_id String @db.Uuid

  liked_at DateTime @db.Date @default(dbgenerated("now()"))

  @@id([user_id, track_id])
  @@index([user_id, liked_at])
}


model Playlist {
  id   String @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  name String
  images Json

  tracks TrackOnPlaylist[]

  collections PlaylistOnCollection[]

  user    User   @relation(fields: [user_id], references: [id], onDelete: Cascade)
  user_id String @db.Uuid

  created_at DateTime @db.Date @default(dbgenerated("now()"))
  updated_at DateTime @updatedAt
}

model UserFollow {
  follower    User   @relation("userFollowing", fields: [followerId], references: [id])
  followerId  String @db.Uuid

  following    User   @relation("followedBy", fields: [followingId], references: [id])
  followingId  String @db.Uuid

  createdAt   DateTime @default(now())

  @@id([followerId, followingId])
}

//History

model History {
  id        String   @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String   @db.Uuid @map("user_id")

  track     Track    @relation(fields: [trackId], references: [id], onDelete: Cascade)
  trackId   String   @db.Uuid @map("track_id")

  playedAt  DateTime @default(dbgenerated("now()")) @db.Timestamp

  @@index([userId, playedAt])
}





//User

model User {
  id              String    @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  name            String
  email           String    @unique
  emailVerified   Boolean?
  image           String?
  username        String    @unique
  displayUsername String
  biography       String?
  location        String?
  
  accounts        Account[]
  sessions        Session[]

  history         History[]
  likes           Like[]
  following       Follow[]
  playlists       Playlist[]
  collection      Collection?
  userFollowing UserFollow[] @relation("userFollowing")
  followedBy UserFollow[] @relation("followedBy")

  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  @@map("user")
}

model Session {
  id        String   @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  expiresAt DateTime @map("expires_at")
  token     String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  ipAddress String?  @map("ip_address")
  userAgent String?  @map("user_agent")
  userId    String   @db.Uuid @map("user_id")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Account {
  id                    String    @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  accountId             String    @map("account_id")
  providerId            String    @map("provider_id")
  userId                String    @db.Uuid @map("user_id")
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?   @map("access_token")
  refreshToken          String?   @map("refresh_token")
  idToken               String?   @map("id_token")
  accessTokenExpiresAt  DateTime? @map("access_token_expires_at")
  refreshTokenExpiresAt DateTime? @map("refresh_token_expires_at")
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now()) @map("created_at")
  updatedAt             DateTime  @updatedAt @map("updated_at")

  @@map("account")
}

model Verification {
  id         String   @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  identifier String
  value      String
  expiresAt  DateTime @map("expires_at")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@map("verification")
}

model Admin {
  id       String @id @db.Uuid @default(dbgenerated("gen_random_uuid()")) 
  email    String @unique
  password String
}