generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Artist {
  id                String   @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  name              String
  avatar            Json?
  mainCover         String?  @map("main_cover")
  description       String?
  listeners         Int      @default(0)
  isVerified        Boolean  @default(false) @map("is_verified")
  regionalListeners Json?    @map("regional_listeners")
  socials           Json?
  covers            String[] @default([])
  followersDefault  Int      @default(0) @map("followers_default")
  createdAt         DateTime @default(dbgenerated("now()")) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  albums    Album[]
  tracks    Track[]
  followers Follow[]
  genres    Genre[]

  @@index([name])
  @@map("artist")
}

model Album {
  id          String   @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  name        String
  cover       Json?
  releaseDate DateTime @default(dbgenerated("now()")) @db.Date @map("release_date")

  artists     Artist[]
  genres      Genre[]
  tracks      TrackOnAlbum[]
  collections AlbumOnCollection[]

  createdAt   DateTime @default(dbgenerated("now()")) @db.Date @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@index([name])
  @@map("album")
}

model Track {
  id          String   @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  name        String
  cover       Json?
  song        String?
  releaseDate DateTime @default(dbgenerated("now()")) @db.Date @map("release_date")
  duration    Int
  lyrics      String?
  reproductions Int    @default(0)

  genres      Genre[]
  likes       Like[]
  artists     Artist[]
  albums      TrackOnAlbum[]
  playlists   TrackOnPlaylist[]
  collections TrackOnCollection[]
  history     History[]

  createdAt   DateTime @default(dbgenerated("now()")) @db.Date @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@index([name])
  @@map("track")
}

model Genre {
  id      String   @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  artists Artist[]
  albums  Album[]
  tracks  Track[]
  name    String @unique
  addedAt DateTime @default(dbgenerated("now()")) @db.Date @map("added_at")

  @@map("genre")
}

model TrackOnAlbum {
  order   Int    @default(1) @db.Integer
  disk    Int    @default(1) @db.Integer
  album   Album  @relation(fields: [albumId], references: [id], onDelete: Cascade)
  albumId String @db.Uuid @map("album_id")
  track   Track  @relation(fields: [trackId], references: [id], onDelete: Cascade)
  trackId String @db.Uuid @map("track_id")

  @@id([albumId, trackId])
  @@map("track_on_album")
}

model TrackOnPlaylist {
  track      Track    @relation(fields: [trackId], references: [id], onDelete: Cascade)
  trackId    String   @db.Uuid @map("track_id")
  playlist   Playlist @relation(fields: [playlistId], references: [id], onDelete: Cascade)
  playlistId String   @db.Uuid @map("playlist_id")
  addedAt    DateTime @default(dbgenerated("now()")) @db.Date @map("added_at")

  @@id([trackId, playlistId])
  @@index([playlistId, addedAt])
  @@map("track_on_playlist")
}

model AlbumOnCollection {
  album        Album      @relation(fields: [albumId], references: [id], onDelete: Cascade)
  albumId      String     @db.Uuid @map("album_id")
  collection   Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  collectionId String     @db.Uuid @map("collection_id")
  addedAt      DateTime   @default(dbgenerated("now()")) @db.Date @map("added_at")

  @@id([albumId, collectionId])
  @@map("album_on_collection")
}

model TrackOnCollection {
  track        Track      @relation(fields: [trackId], references: [id], onDelete: Cascade)
  trackId      String     @db.Uuid @map("track_id")
  collection   Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  collectionId String     @db.Uuid @map("collection_id")
  addedAt      DateTime   @default(dbgenerated("now()")) @db.Date @map("added_at")

  @@id([trackId, collectionId])
  @@map("track_on_collection")
}

model PlaylistOnCollection {
  playlist     Playlist   @relation(fields: [playlistId], references: [id], onDelete: Cascade)
  playlistId   String     @db.Uuid @map("playlist_id")
  collection   Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  collectionId String     @db.Uuid @map("collection_id")
  addedAt      DateTime   @default(dbgenerated("now()")) @db.Date @map("added_at")

  @@id([playlistId, collectionId])
  @@map("playlist_on_collection")
}

model Collection {
  id        String                 @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  albums    AlbumOnCollection[]
  tracks    TrackOnCollection[]
  playlists PlaylistOnCollection[]
  user      User                   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String                 @unique @db.Uuid @map("user_id")

  @@map("collection")
}

model Follow {
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String   @db.Uuid @map("user_id")
  artist     Artist   @relation(fields: [artistId], references: [id], onDelete: Cascade)
  artistId   String   @db.Uuid @map("artist_id")
  followedAt DateTime @default(dbgenerated("now()")) @db.Date @map("followed_at")

  @@id([userId, artistId])
  @@map("follow")
}

model Like {
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId  String   @db.Uuid @map("user_id")
  track   Track    @relation(fields: [trackId], references: [id], onDelete: Cascade)
  trackId String   @db.Uuid @map("track_id")
  likedAt DateTime @default(dbgenerated("now()")) @db.Date @map("liked_at")

  @@id([userId, trackId])
  @@index([userId, likedAt])
  @@map("like")
}

model Playlist {
  id        String                @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  name      String
  cover     Json?
  tracks    TrackOnPlaylist[]
  collections PlaylistOnCollection[]
  user      User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String                @db.Uuid @map("user_id")
  createdAt DateTime              @default(dbgenerated("now()")) @db.Date @map("created_at")
  updatedAt DateTime              @updatedAt @map("updated_at")

  @@map("playlist")
}

model UserFollow {
  follower    User     @relation("userFollowing", fields: [followerId], references: [id])
  followerId  String   @db.Uuid @map("follower_id")
  following   User     @relation("followedBy", fields: [followingId], references: [id])
  followingId String   @db.Uuid @map("following_id")
  createdAt   DateTime @default(now()) @map("created_at")

  @@id([followerId, followingId])
  @@map("user_follow")
}

model History {
  id       String   @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId   String   @db.Uuid @map("user_id")
  track    Track    @relation(fields: [trackId], references: [id], onDelete: Cascade)
  trackId  String   @db.Uuid @map("track_id")
  playedAt DateTime @default(dbgenerated("now()")) @db.Timestamp @map("played_at")

  @@index([userId, playedAt])
  @@map("history")
}

//User

model User {
  id              String    @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  name            String
  email           String    @unique
  emailVerified   Boolean?
  image           String?
  username        String    @unique
  displayUsername String
  biography       String?
  location        String?
  
  accounts        Account[]
  sessions        Session[]

  history         History[]
  likes           Like[]
  following       Follow[]
  playlists       Playlist[]
  collection      Collection?
  userFollowing UserFollow[] @relation("userFollowing")
  followedBy UserFollow[] @relation("followedBy")

  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  @@map("user")
}

model Session {
  id        String   @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  expiresAt DateTime @map("expires_at")
  token     String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  ipAddress String?  @map("ip_address")
  userAgent String?  @map("user_agent")
  userId    String   @db.Uuid @map("user_id")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Account {
  id                    String    @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  accountId             String    @map("account_id")
  providerId            String    @map("provider_id")
  userId                String    @db.Uuid @map("user_id")
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?   @map("access_token")
  refreshToken          String?   @map("refresh_token")
  idToken               String?   @map("id_token")
  accessTokenExpiresAt  DateTime? @map("access_token_expires_at")
  refreshTokenExpiresAt DateTime? @map("refresh_token_expires_at")
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now()) @map("created_at")
  updatedAt             DateTime  @updatedAt @map("updated_at")

  @@map("account")
}

model Verification {
  id         String   @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  identifier String
  value      String
  expiresAt  DateTime @map("expires_at")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@map("verification")
}

model Admin {
  id       String @id @db.Uuid @default(dbgenerated("gen_random_uuid()")) 
  email    String @unique
  password String
}