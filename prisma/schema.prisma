model Artist {
  id                 String   @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  name               String
  avatar             Json
  main_cover         String
  description        String
  listeners          Int
  is_verified        Boolean
  regional_listeners Json
  socials            Json 
  covers             String[] @default([])

  followers_default  Int
  
  created_at         DateTime @default(dbgenerated("now()")) 
  updated_at         DateTime @updatedAt

  albums Album[]

  tracks Track[]

  followers Follows[]

  genres Genre[]

  @@index([name])
}


model Album {
  id           String   @id  @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  name         String
  cover        Json
  release_date DateTime @db.Date @default(dbgenerated("now()"))

  artists   Artist[]

  genres Genre[]

  tracks TracksOnAlbums[]

  created_at DateTime @db.Date @default(dbgenerated("now()"))
  updated_at DateTime @updatedAt

  @@index([name])
}

model Track {
  id            String @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  name          String
  cover         Json
  song          String
  release_date  DateTime @db.Date @default(dbgenerated("now()"))
  duration      Int
  lyric         String?
 /*  default_reproductions Int Â¿? */ 

  reproductions Int

 /*  default_likes Int */

  genres Genre[]

  likes Likes[]

  artists Artist[]

  albums TracksOnAlbums[]

  playlists TrackPlaylist[]

  created_at DateTime @db.Date @default(dbgenerated("now()"))
  updated_at DateTime @updatedAt
  
  @@index([name])
}



model Genre {
  id   String @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  artists Artist[]
  albums Album[]
  tracks Track[]
  name String
  added_at DateTime @db.Date @default(dbgenerated("now()"))
}


